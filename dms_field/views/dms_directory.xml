<odoo>
    <record id="view_dms_directory_form" model="ir.ui.view">
        <field name="name">dms.directory.form</field>
        <field name="model">dms.directory</field>
        <field name="inherit_id" ref="dms.view_dms_directory_form" />
        <field name="arch" type="xml">
            <field name="inherit_group_ids" position="after">
                <field
                    name="is_template"
                    attrs="{'invisible': ['|', ('allowed_model_ids', '=', []), ('storage_id_save_type', '=', 'attachment')]}"
                />
            </field>
        </field>
    </record>
    <record id="search_dms_directory" model="ir.ui.view">
        <field name="name">dms.directory.search</field>
        <field name="model">dms.directory</field>
        <field name="inherit_id" ref="dms.search_dms_directory" />
        <field name="arch" type="xml">
            <filter name="filter_root" position="after">
                <separator />
                <filter
                    string="Templates"
                    name="filter_templates"
                    domain="[('is_template', '=', True)]"
                />
            </filter>
        </field>
    </record>
    <record id="dms_directory_dms_tree_view" model="ir.ui.view">
        <field name="name">dms.directory.dms_tree (in dms_field)</field>
        <field name="model">dms.directory</field>
        <field name="arch" type="xml">
            <dms_tree>
                <field name="name" />
            </dms_tree>
        </field>
    </record>
</odoo>
